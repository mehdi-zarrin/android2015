<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mehdi.android2015">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".core.ApplicationBase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.LoginNarrowActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.AuthenticationActivity" android:noHistory="true"/>

        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.ContactsActivity" />
        <activity android:name=".activities.AddContactActivity" />
        <activity android:name=".activities.ContactActivity" />
        <activity android:name=".activities.SentMessages" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
    </application>

</manifest>
