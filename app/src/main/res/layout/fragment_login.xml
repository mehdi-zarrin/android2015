<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/fragment_login_userName"
        android:layout_marginBottom="8dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@+id/fragment_login_userName"
        android:id="@+id/fragment_login_password"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/primary_color_dark"
        android:textColor="@android:color/white"
        android:layout_below="@+id/fragment_login_password"
        android:id="@+id/fragment_login_loginButton"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:layout_below="@+id/fragment_login_password"
        android:id="@+id/fragment_login_progressbar"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyleInverse"/>

</RelativeLayout>