<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">


        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:id="@+id/list_item_message_avatar"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_message_avatar"
            android:text="Display name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/list_item_message_displayname"
            android:textColor="#de000000"
            android:layout_marginBottom="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_message_displayname"
            android:text="01/21/2016"
            android:layout_toRightOf="@+id/list_item_message_avatar"
            android:textSize="12sp"
            android:textColor="#444"
            android:id="@+id/list_item_message_createdat"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_message_createdat"
            android:layout_toRightOf="@id/list_item_message_avatar"
            android:text="Recived"
            android:textSize="12sp"
            android:id="@+id/list_item_message_sentReceived"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>